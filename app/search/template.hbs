<div class="row">
  {{#if this.session.isAuthenticated}}
    <CollectionsFlyout changeCollection=this.changeCollection class="col-md-2" />
    <SearchList
      @moreToShow={{this.moreToShow}}
      @pipelines={{this.pipelines}}
      @updatePipelines={{this.updatePipelines}}
      @collections={{this.collections}}
      @addToCollection={{this.addToCollection}}
      @query={{this.query}}
      class="col-md-10"
    />
  {{else}}
    <SearchList
      @moreToShow={{this.moreToShow}}
      @pipelines={{this.pipelines}}
      @updatePipelines={{this.updatePipelines}}
      @collections={{this.collections}}
      @addToCollection={{this.addToCollection}}
      @query={{this.query}}
      @name={{this.name}}
      @description={{this.description}}
      @errorMessage={{this.errorMessage}}
      @addNewCollection={{this.addNewCollection}}
    />
  {{/if}}
</div>

{{outlet}}

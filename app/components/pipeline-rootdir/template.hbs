<div class={{this.styleNamespace}} ...attributes>
  {{input class="checkbox-input" type="checkbox" name="hasRootDir" checked=this.hasRootDir}}
  <label>My source directory is not at the checkout root</label>
  {{#if this.hasRootDir}}
    <div>
      {{input
        class="text-input root-dir"
        placeholder="Enter your source directory path relative to the checkout URL (eg: src)"
        value=this.rootDir
        key-up=this.updateRootDir
      }}
    </div>
  {{/if}}
</div>
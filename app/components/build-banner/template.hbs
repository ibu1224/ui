<div class="{{this.buildStatus}} {{this.styleNamespace}} build-banner row">
  <ul>
  <li class="job-name build-{{this.buildStatus}}">
    {{#if this.event.pr.url}}
      {{#link-to "pipeline.pulls" this.pipelineId classNames="banner-value"}}{{this.jobName}}{{/link-to}}
    {{else}}
      {{#link-to "pipeline.events.show" this.pipelineId this.event.id (query-params jobId=this.jobId) classNames="banner-value"}}{{this.jobName}}{{/link-to}}
    {{/if}}
    <span class="banner-label">Job</span>
  </li>
  <li class="commit">
    <span class="banner-value commit-list">
      <a href={{this.event.commit.url}} class="sha commit-sha">#{{this.event.truncatedSha}}</a>
      {{#if this.event.pr.url}}
        <BsDropdown as |dd|>
          <dd.toggle> <span class="caret caret-display"></span></dd.toggle>
          <dd.menu as |ddm|>
            {{#each (await this.shortenedPrShas) as |prSha|}}
              <ddm.item @class="pr-item">
                <a onClick={{action "changeCurPr" prSha}}>{{prSha.index}}. {{prSha.shortenedSha}}</a>
              </ddm.item>
            {{/each}}
          </dd.menu>
        </BsDropdown>
      {{/if}}
    </span>
    <span class="banner-label">Commit</span>
  </li>
  {{#if this.event.pr.url}}
    <li class="pr">
      <span class="banner-value pr-url-holder">
        <a href={{this.event.pr.url}} class="sha pr-url">
          {{inline-svg "github" class="pr-img"}}
          <span class="pr-link">PR#{{this.prNumber}}</span>
        </a>
      </span>
      <span class="banner-label">Pull Request</span>
    </li>
  {{/if}}
  <li class="duration">
    <details>
      <summary>
        <a class="banner-value" title="Total duration: {{this.duration}}, Blocked time: {{this.blockDuration}}, Image pull time: {{this.imagePullDuration}}, Build time: {{this.buildDuration}}">{{this.duration}}</a>
      </summary>
      <li class="subsection"><span class="banner-value">{{this.blockDuration}} blocked</span></li>
      <li class="subsection"><span class="banner-value">{{this.imagePullDuration}} pulling image</span></li>
      <li class="subsection"><span class="banner-value">{{this.buildDuration}} in build</span></li>
    </details>
    {{#link-to "pipeline.metrics" this.pipelineId (query-params jobId=this.jobId)}}See build metrics{{/link-to}}
    <span class="banner-label">Duration</span>
  </li>
  <li class="created">
    <span class="banner-value" title={{this.buildCreate}}>{{moment-format this.buildCreate "YYYY-MM-DD HH:mm:ss"}}</span>
    <span class="banner-label">Create Time</span>
  </li>
  <li class="user">
    <span class="banner-value">{{user-link user=this.event.commit.author causeMessage=this.event.causeMessage}}</span>
    <span class="banner-label">Committer</span>
  </li>
  {{#if this.coverageStep}}
    <li class="coverage">
      <span class="banner-value">
        <a href={{this.coverageInfo.coverageUrl}} title={{if (eq this.coverageInfo.coverage "N/A") "Coverage report not generated"}}>
          {{this.coverageInfo.coverage}}
        </a>
      </span>
      <span class="banner-label">Coverage</span>
    </li>
    <li class="tests">
      <span class="banner-value">
        <a href={{this.coverageInfo.testsUrl}} title={{if (eq this.coverageInfo.tests "N/A") "Tests report not generated"}}>
          {{this.coverageInfo.tests}}
        </a>
      </span>
      <span class="banner-label">Tests Passed</span>
    </li>
  {{/if}}
  <li class="docker-container">
    <span class="banner-value">{{this.buildContainer}}</span>
    <span class="banner-label">Container</span>
  </li>
  <li class="call-to-action button-right">
    {{#if this.isAuthenticated}}
      <BsButton @onClick={{action "buildButtonClick"}}>{{this.buildAction}}</BsButton>
    {{/if}}
  </li>
  </ul>
</div>
